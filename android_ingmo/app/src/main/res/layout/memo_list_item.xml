<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="7dp"
    android:layout_marginRight="7dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/itemMemoTitle"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:text="테스트용제목부분열두글자"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:gravity="center_vertical"
            android:padding="5dp"/>

        <!--중요 메모 체크 가능, 클릭시 마다 btn_star간 변경-->
        <Button
            android:id="@+id/btnStarMemo"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:background="@drawable/btn_non_star"/>

        <TextView
            android:id="@+id/itemDate"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center|end"
            android:padding="5dp"
            android:text="0000년 00월 00일"
            android:textColor="#bababa"
            android:textSize="10dp" />

    </LinearLayout>


    <TextView
        android:id="@+id/itemMemoText"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="본문 내용이 들어갈 자리 입니다.본문 내용이 들어갈 자리 입니다.본문 내용이 들어갈 자리 입니다.본문 내용이 들어갈 자리 입니다.본문 내용이 들어갈 자리 입니다.본문 내용이 들어갈 자리 입니다.본문 내용이 들어갈 자리 입니다.본문 내용이 들어갈 자리 입니다.본문 내용이 들어갈 자리 입니다.본문 내용이 들어갈 자리 입니다."
        android:gravity="start"
        android:padding="5dp"
        android:textSize="15dp"/>





</LinearLayout>